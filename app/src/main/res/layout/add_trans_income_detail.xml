<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/addtransIncome"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_salary"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/salary" />

            <ImageView
                android:id="@+id/icon_investment"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/investment" />

            <ImageView
                android:id="@+id/icon_parttime"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/parttime" />

            <ImageView
                android:id="@+id/icon_allowance"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/allowance" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroupIncomeFirstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radioButtonSalary"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="35dp" />

            <RadioButton
                android:id="@+id/radioButtonInvestment"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <RadioButton
                android:id="@+id/radioButtonParttime"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <RadioButton
                android:id="@+id/radioButtonRedpocket"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="20dp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_bonus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/bonus" />

            <ImageView
                android:id="@+id/icon_gambling"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/gambe" />

            <ImageView
                android:id="@+id/icon_rental"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/rental" />

            <ImageView
                android:id="@+id/icon_income_other"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/other" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroupIncomeSecondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radioButtonBonus"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="35dp" />

            <RadioButton
                android:id="@+id/radioButtonGambling"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <RadioButton
                android:id="@+id/radioButtonRental"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <RadioButton
                android:id="@+id/radioButtonIncomeOther"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="20dp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/income_cateshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/income_category"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/select_income_category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Select Category"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/income_note"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/Note"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/income_editNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_note"
            android:inputType="textPersonName"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/income_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/Date"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/income_selectDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/select_date"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/income_currency"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Currency"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/income_currency_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="select currency" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/individual_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/individual_income_amount"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/income_editIndividual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_amount"
            android:inputType="numberDecimal"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>

